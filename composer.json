{
    "name": "sioweb/contao-element-group",
    "version": "dev-main",
    "description": "Grouping elements",
    "license": "LGPL-3.0-or-later",
    "type": "contao-bundle",
    "authors": [
        {
            "name": "Sascha Weidner",
            "homepage": "https://github.com/sioweb"
        }
    ],
    "homepage": "https://github.com/sioweb",
    "support": {
        "issues": "https://github.com/sioweb",
        "source": "https://github.com/sioweb"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Sioweb\\ElementGroup\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sioweb\\ElementGroup\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "contao-components/installer": true,
            "contao/manager-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "target-directory": "tools"
        },
        "contao-manager-plugin": "Sioweb\\ElementGroup\\ContaoManager\\Plugin"
    },
    "scripts": {
        "all": [
            "@unit-tests",
            "@ecs",
            "@phpstan"
        ],
        "ecs": "@php tools/ecs/vendor/bin/ecs check src tests --config ecs.php --fix --ansi",
        "phpstan": "@php tools/phpstan/vendor/bin/phpstan analyze --ansi",
        "unit-tests": "@php vendor/bin/phpunit --colors=always"
    }
}
